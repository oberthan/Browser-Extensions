{
  "manifest_version": 3,
  "name": "Udvidet Lectio",
  "version": "1.1",
  "browser_specific_settings": {
	  "gecko": {
		"id": "udvidet_lectio@oberthan",
		"data_collection_permissions": {
			"required": ["none"]
		}
	  }
  },
  "description": "Ændrer både udseendet og tilføjer funktioner som mangler rundt omkring.",
  "icons": {
    "16": "graduation_hat16.png",
    "48": "graduation_hat48.png",
    "128": "graduation_hat128.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.lectio.dk/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
